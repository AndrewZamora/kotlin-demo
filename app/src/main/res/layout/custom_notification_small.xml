<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="94dp"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher"></ImageView>
            <TextView
                android:id="@+id/custom_notification_small_text"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Message"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/custom_notification_small_bullet_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:text="\u2022"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/custom_notification_small_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Time"
                android:text="9:00"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.Compat.Notification"
            android:maxLines="2"
            android:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint "
            android:ellipsize="end">
        </TextView>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">
    <ImageView
        android:id="@+id/custom_notification_large_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>

</LinearLayout>